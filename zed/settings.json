// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "assistant": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        },
        "enabled": true,
        "version": "2"
    },
    "auto_update": true,
    "autosave": "on_focus_change",
    "buffer_font_size": 15,
    "code_actions_on_format": {},
    "current_line_highlight": "all",
    "ensure_final_newline_on_save": true,
    "features": {
        "edit_prediction_provider": "zed",
        "autocomplete": true,
        "copilot": true
    },
    "file_icons": true,
    "format_on_save": "on",
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": {
            "delay_ms": 0,
            "enabled": true,
            "min_column": 0
        }
    },
    "git_status": {
        "enabled": true
    },
    "hide_mouse": "on_typing_and_movement",
    "horizontal_scroll_margin": 0,
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware"
    },
    "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": true,
        "show_type_hints": true
    },
    "languages": {
        "Go": {
            "code_actions_on_format": {
                "source.organizeImports": true
            }
        }
    },
    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "check": {
                    "command": "clippy"
                },
                "inlayHints": {
                    "checkOnSave": true,
                    "enabled": true,
                    "lifetimeElisionHints": {
                        "enable": "skip_trivial",
                        "useParameterNames": true
                    },
                    "closureReturnTypeHints": {
                        "enable": "always"
                    },
                    "typeHints": {
                        "enable": true
                    },
                    "parameterHints": {
                        "enable": true
                    },
                    "chainingHints": {
                        "enable": true
                    }
                },
                "cargo": {
                    "allFeatures": true
                },
                "procMacro": {
                    "enable": true
                },
                "diagnostics": {
                    "enable": true,
                    "disabled": ["unresolved-proc-macro"]
                }
            },
            "binary": {
                "path": "/home/optimusprime/.cargo/bin/rust-analyzer",
                "ignore_system_version": false
            },
            "completion": {
                "addCallArgumentSnippets": true,
                "addCallParenthesis": true,
                "checkOnSave": true,
                "checkOnType": true
            },
            "hoverActions": {
                "enable": true,
                "implementations": true,
                "run": true,
                "debug": true
            },
            "lens": {
                "enable": true,
                "implementations": true,
                "references": true,
                "run": true,
                "debug": true
            },
            "checkOnSave": {
                "command": "clippy"
            }
        },
        "yaml-language-server": {
            "settings": {
                "yaml": {
                    "keyOrdering": false,
                    "format": {
                        "singleQuote": false
                    }
                }
            }
        }
    },
    "middle_click_paste": true,
    "preview_tabs": {
        "enabled": true,
        "enable_preview_from_code_navigation": true,
        "enable_preview_from_file_finder": true
    },
    "relative_line_numbers": true,
    "restore_on_startup": "last_workspace",
    "scrollbar": {
        "cursors": true,
        "diagnostics": "all",
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true,
        "show": "auto"
    },
    "show_edit_predictions": true,
    "show_whitespaces": "selection",
    "soft_wrap": "editor_width",
    "stable": {
        "enabled": true,
        "version": "latest"
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": true
    },
    "tab_size": 4,
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true,
        "show": true,
        "size": "dynamic",
        "style": "soft"
    },
    "telemetry": {
        "diagnostics": true,
        "metrics": true
    },
    "terminal": {
        "copy_on_select": true,
        "font_family": "Fira Mono",
        "shell": "system"
    },
    "theme": {
        "dark": "One Dark",
        "light": "One Light",
        "mode": "dark"
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true,
        "selections_menu": true
    },
    "ui_font_family": "Fira Code",
    "ui_font_size": 14,
    "use_auto_surround": true,
    "use_autoclose": true,
    "vim_mode": true,
    "vim": {
        "cursor_shape": {
            "normal": "hollow",
            "insert": "bar",
            "replace": "block",
            "visual": "underline"
        },
        "relative_line_numbers": true,
        "scroll_beyond_last_line": false,
        "toggle_relative_line_numbers": true,
        "use_multiline_find": true,
        "use_smartcase_find": true,
        "use_system_clipboard": "on_yank"
    },
    "window": {
        "menu": {
            "show": true
        },
        "status_bar": {
            "show": true
        }
    }
}
